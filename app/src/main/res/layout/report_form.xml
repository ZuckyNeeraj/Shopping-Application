<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your problem"
        android:textColor="@color/white"
        android:fontFamily="@font/robot_condensed"
        android:textAlignment="center"
        android:layout_weight="1"
        android:textSize="@dimen/text_dimension_20sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/density_independent_pixel_6dp"
        android:layout_marginBottom="@dimen/density_independent_pixel_6dp"/>

        <ImageView
            android:id="@+id/report_close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross"
            android:layout_marginTop="@dimen/density_independent_pixel_4dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/density_independent_pixel_1dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/density_independent_pixel_16dp">

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/density_independent_pixel_0dp"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="@dimen/text_dimension_20sp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                />


            <EditText
                android:id="@+id/report_user_name"
                android:layout_width="@dimen/density_independent_pixel_0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_dimension_20sp"
                android:singleLine="true"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/text_background"
                android:padding="@dimen/density_independent_pixel_2dp"
                />

        </LinearLayout>

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/density_independent_pixel_6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Describe your issue"
                android:textSize="@dimen/text_dimension_20sp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/report_user_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textSize="@dimen/text_dimension_15sp"
                android:textColor="@color/white"
                android:background="@drawable/text_background"
                android:padding="@dimen/density_independent_pixel_2dp"
                android:gravity="top|start"
                />


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/density_independent_pixel_1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/report_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robot_condensed"
            android:background="@drawable/rounded_button1"
            android:layout_margin="@dimen/density_independent_pixel_6dp"
            android:src="@drawable/next"/>

    </LinearLayout>

</LinearLayout>
